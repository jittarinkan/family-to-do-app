<h1 class="text-3xl font-bold">Family Member Dashboard</h1>
<br>
<%= link_to "Add Family Member", new_family_member_path %>
<br>
<table class="min-w-full">
  <thead>
    <tr>
      <th class="text-sm font-medium text-gray-900 px-6 py-4 text-left", scope="col">Name</th>
      <th class="text-sm font-medium text-gray-900 px-6 py-4 text-left", scope="col">Tasks</th>
      <th class="text-sm font-medium text-gray-900 px-6 py-4 text-left", scope="col">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @family_members.each do |family_member| %>
    <tr>
      <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"> <%= family_member.name %> </td>
      <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"> <%= "#{family_member.tasks_count} Tasks" %></td>
      <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"> <%= link_to '(View tasks)', family_member_tasks_path(family_member) %> </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'View all tasks', tasks_path %>
<%= paginate @family_members %>
