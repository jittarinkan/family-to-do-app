<h1>Family Member Dashboard</h1>

<%= link_to "Add Family Member", new_family_member_path %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Tasks</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @family_members.each do |family_member| %>
    <tr>
      <td> <%= family_member.name %> </td>
      <td> <%= "#{family_member.tasks_count} Tasks" %></td>
      <td> <%= link_to '(View tasks)', family_member_tasks_path(family_member) %> </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'View all tasks', tasks_path %>

<%= paginate @family_members %>
