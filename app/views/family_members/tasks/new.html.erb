<h1 class="text-3xl font-bold">Add Task</h1>

<%= form_with(model: @task) do |form| %>
  <% if @task.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% @task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :family_member, style: "display: block" %>
    <%= form.collection_select :family_member_id, FamilyMember.order(:name), :id, :name %>
  </div>

  <div>
    <%= form.submit 'Save', class: "inline-block px-6 py-2.5 bg-green-500 text-white font-medium uppercase hover:bg-green-600 focus:bg-green-600 focus:outline-none focus:ring-0 active:bg-green-700 transition duration-150 ease-in-out" %>
  </div>
<% end %>

<div>
  <%= link_to "Back to tasks", tasks_path %>
</div>
