<h1 class="text-3xl font-bold">Add Task</h1>

<%= form_with(model: @task, html: { class: 'w-full' }) do |form| %>
  <% if @task.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% @task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <%= form.label :description, class: "block text-gray-500 font-bold mb-1 md:mb-0 pr-4"%>
      <%= form.text_field :description, class: "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700" %>
    </div>
  </div>

  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <%= form.label :family_member, class: "block text-gray-500 font-bold mb-1 md:mb-0 pr-4"%>
      <%= form.collection_select :family_member_id, FamilyMember.order(:name), :id, :name, class: "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700" %>
    </div>
  </div>

  <div>
    <%= form.submit 'Save', class: "inline-block px-6 py-2.5 bg-green-500 text-white font-medium uppercase hover:bg-green-600 focus:bg-green-600 focus:outline-none focus:ring-0 active:bg-green-700 transition duration-150 ease-in-out" %>
  </div>
<% end %>

<br>

<div>
  <%= link_to "Back to tasks", tasks_path %>
</div>
